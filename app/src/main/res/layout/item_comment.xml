<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_8"
    android:layout_marginRight="@dimen/size_8"
    android:layout_marginTop="@dimen/size_8"
    android:orientation="horizontal"
    android:padding="@dimen/size_6"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/size_16"
        android:paddingRight="@dimen/size_16">

        <FrameLayout
            android:layout_width="@dimen/size_80"
            android:layout_height="@dimen/size_80"
            android:layout_gravity="center">

            <com.xtel.ivipu.view.widget.RoundImage
                android:layout_width="@dimen/size_80"
                android:layout_height="@dimen/size_80"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@mipmap/bg_white"/>

            <com.xtel.ivipu.view.widget.RoundImage
                android:id="@+id/ic_user_avatar_comment"
                android:layout_width="@dimen/size_78"
                android:layout_height="@dimen/size_78"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@mipmap/ic_user"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_100"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_24"
                android:layout_marginTop="@dimen/size_8"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/size_12">

                <TextView
                    android:id="@+id/txt_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="User Name"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_18" />

                <!--<ImageView-->
                <!--android:id="@+id/ic_comment"-->
                <!--android:layout_width="@dimen/size_48"-->
                <!--android:layout_height="@dimen/size_48"-->
                <!--android:padding="@dimen/size_4"-->
                <!--android:src="@drawable/ic_action_message" />-->
            </LinearLayout>

            <TextView
                android:id="@+id/txt_user_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/size_12"
                android:layout_marginTop="@dimen/size_4"
                android:ellipsize="end"
                android:lines="2"
                android:paddingLeft="@dimen/size_12"
                android:singleLine="false"
                android:text="@string/text"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txt_date_time_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_12"
                android:layout_marginTop="@dimen/size_6"
                android:text="Date time"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>