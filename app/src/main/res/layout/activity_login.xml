<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bgr_app"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/size_32"
                tools:ignore="NestedWeights">

                <ImageView
                    android:layout_width="@dimen/size_160"
                    android:layout_height="@dimen/size_160"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:src="@mipmap/ivip_laucher" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingLeft="@dimen/size_16"
                    android:paddingRight="@dimen/size_16"
                    android:text="Tận hưởng thế giới mua sắm trong tay"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_32"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_16"
                android:layout_marginLeft="@dimen/size_24"
                android:layout_marginRight="@dimen/size_24"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:background="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="@dimen/size_10"
                    android:paddingRight="@dimen/size_10"
                    android:singleLine="true"
                    android:text="@string/action_login_with"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_18" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.54"
                    android:background="#ffffff" />
            </LinearLayout>

            <!--<Button-->
            <!--android:id="@+id/btn_phone_login"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/size_48"-->
            <!--android:layout_marginBottom="@dimen/size_10"-->
            <!--android:background="@drawable/button_nomal"-->
            <!--android:text="@string/action_login_phone"-->
            <!--android:textColor="@android:color/white" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48"
                android:layout_marginBottom="@dimen/size_10"
                android:layout_marginLeft="@dimen/size_24"
                android:layout_marginRight="@dimen/size_24">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btn_phone_login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_48"
                        android:background="@drawable/btn_login_phone"
                        android:elevation="0dp"
                        android:gravity="center"
                        android:text="Số điện thoại"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white" />
                    <FrameLayout
                        android:layout_width="@dimen/size_48"
                        android:layout_height="@dimen/size_48"
                        android:background="@color/left_btn_login"
                        android:elevation="@dimen/size_10">

                        <ImageView
                            android:id="@+id/img_login_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/size_10"
                            android:src="@drawable/ic_btn_login_phone" />
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_48"
                android:layout_marginLeft="@dimen/size_24"
                android:layout_marginRight="@dimen/size_24">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btn_facebook_login"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_48"
                        android:background="@drawable/btn_login_facebook"
                        android:elevation="0dp"
                        android:text="Facebook"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white" />

                    <FrameLayout
                        android:layout_width="@dimen/size_48"
                        android:layout_height="@dimen/size_48"
                        android:background="@color/left_btn_login_facebook"
                        android:elevation="@dimen/size_10">

                        <ImageView
                            android:id="@+id/img_login_facebook"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/size_10"
                            android:src="@drawable/ic_login_facebook" />
                    </FrameLayout>

                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>